# Writers Factory Core - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (GPT)
OPENAI_API_KEY=your_openai_key_here
OPENAI_ORGANIZATION=  # Optional

# Google (Gemini)
GOOGLE_API_KEY=your_google_key_here

# xAI (Grok)
XAI_API_KEY=your_xai_key_here

# Chinese LLMs
QWEN_API_KEY=your_qwen_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here
DOUBAO_API_KEY=your_doubao_key_here
BAICHUAN_API_KEY=your_baichuan_key_here
KIMI_API_KEY=your_kimi_key_here

# NotebookLM (Optional)
NOTEBOOKLM_NOTEBOOK_ID=your_notebook_id_here
NOTEBOOKLM_ENABLED=false

# Cognee (Local - no key needed)
COGNEE_DATA_DIR=.cognee

# Database
DATABASE_PATH=.factory/analytics.db

# Session Storage
SESSION_PATH=project/.session
